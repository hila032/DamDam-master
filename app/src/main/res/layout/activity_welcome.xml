<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80f2f5f5"
    tools:context=".activities.WelcomeActivity">

    <Button
        android:id="@+id/playNow"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:alpha="0.7"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/logout"
        android:onClick="userList"
        android:background="@drawable/strart"
        />
    <Button
        android:id="@+id/profile"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/blue"
        android:onClick="profile"
        android:text="profile"
        android:textColor="@android:color/white" />


    <!--<ImageView-->
        <!--android:id="@+id/imgLogo"-->
        <!--android:layout_width="385dp"-->
        <!--android:layout_height="123dp"-->
        <!--android:pare="true"-->
        <!--android:src="@drawable/hila" />-->

    <TextView
        android:id="@+id/emailWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="TextView"

        android:textColor="#000"
        android:textSize="30sp" />
    <!--android:layout_below="@id/imgLogo"-->
    <Button
        android:id="@+id/logout"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/green"
        android:onClick="logout"
        android:text="Logout"
        android:layout_above="@id/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/BTNshare"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:onClick="share"
        android:layout_marginStart="10dp"
        android:layout_alignBaseline="@id/profile"
        android:background="@drawable/share" />

    <Button
        android:id="@+id/BTNInfo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_alignBaseline="@id/profile"
        android:background="@drawable/question" />
    <Button
        android:id="@+id/ticTacBTN"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="ticTac"
        android:layout_alignTop="@id/playNow"
        android:background="@drawable/tictac"
        android:text="Button" />

</RelativeLayout>