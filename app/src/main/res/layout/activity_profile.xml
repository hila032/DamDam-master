<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary_dark"
    tools:context=".activities.ProfileActivity">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="153dp"
        android:layout_height="145dp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/gallary"
        android:layout_marginEnd="147dp" />

    <Button
        android:id="@+id/BTNcmara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="22dp"
        android:onClick="picImage"
        android:text="cmara" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="TextView" />

    <Button
        android:id="@+id/gallary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/BTNcmara"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="58dp"
        android:onClick="onGallaryClick"
        android:text="gallary" />

    <Button
        android:id="@+id/DumRecords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gallary"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="35dp"
        android:onClick="DumRecords"
        android:text="DumRecords" />

    <Button
        android:id="@+id/TicRecords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gallary"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="41dp"
        android:onClick="TicRecords"
        android:text="TicRecords" />


</RelativeLayout>