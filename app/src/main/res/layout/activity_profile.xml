<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backj"
    tools:context=".activities.ProfileActivity">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/prof" />

    <Button
        android:id="@+id/BTNcmara"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cam"
        android:onClick="picImage" />

    <Button
        android:id="@+id/gallary"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/BTNcmara"
        android:layout_alignEnd="@id/BTNcmara"
        android:background="@drawable/gal"
        android:onClick="onGallaryClick"
        />

    <Button
        android:id="@+id/TicRecords"
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:layout_alignBaseline="@+id/gallary"

        android:layout_alignTop="@+id/BTNcmara"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:background="@drawable/trophy"
        android:onClick="records" />


</RelativeLayout>