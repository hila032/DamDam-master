<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#62ad68"
    tools:context=".activities.ProfileActivity">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/prof"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/BTNcmara"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cam"
        android:onClick="picImage" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:textSize="26dp"
        android:typeface="serif"
        android:text="TextView" />

    <Button
        android:id="@+id/gallary"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/BTNcmara"
        android:layout_alignEnd="@id/BTNcmara"
        android:background="@drawable/gal"
        android:onClick="onGallaryClick"
        />

    <Button
        android:id="@+id/DumRecords"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/gallary"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/bbg"
        android:onClick="TicRecords" />

    <Button
        android:id="@+id/TicRecords"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/BTNcmara"
        android:onClick="TicRecords"
        android:layout_alignEnd="@id/DumRecords"

        android:background="@drawable/bbp" />


</RelativeLayout>