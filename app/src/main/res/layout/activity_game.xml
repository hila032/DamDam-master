<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.GameActivity">

    <ImageButton
        android:id="@+id/BTNgun"
        android:layout_width="90dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="16dp"
        android:onClick="shoot"
        app:srcCompat="@drawable/gun" />

    <ImageButton
        android:id="@+id/BTNshild"
        android:layout_width="102dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="412dp"
        android:onClick="defance"
        app:srcCompat="@drawable/shield" />

    <ImageButton
        android:id="@+id/BTNammuo"
        android:layout_width="94dp"
        android:layout_height="84dp"
        android:layout_alignTop="@+id/BTNgun"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="13dp"
        android:onClick="relood"
        app:srcCompat="@drawable/shells" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/BTNgun"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="-41dp" />

</RelativeLayout>