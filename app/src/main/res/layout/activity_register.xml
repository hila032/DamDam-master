<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hhh"
    tools:context=".activities.RegisterActivity">


    <EditText
        android:id="@+id/passwordReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Retype password"
        android:inputType="textPassword"
        android:layout_above="@id/registerButtonReg"
        android:layout_marginBottom="20dp"
        android:layout_alignEnd="@id/usernameReg"
        android:layout_alignStart="@id/usernameReg"/>

    <EditText
        android:id="@+id/usernameReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_above="@id/nicknameReg"
        android:layout_marginBottom="20dp"
        android:hint="Enter Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/nicknameReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your nickname"
        android:inputType="textPassword"
        android:layout_above="@id/passwordReg"
        android:layout_marginBottom="20dp"
        android:layout_alignEnd="@id/usernameReg"
        android:layout_alignStart="@id/usernameReg"/>

    <Button
        android:id="@+id/registerButtonReg"
        android:layout_width="175dp"
        android:layout_height="80dp"
        android:layout_alignTop="@id/loginReg"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/reg_btn"
        android:onClick="register" />

    <Button
        android:id="@+id/loginReg"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_btn"
        android:onClick="login" />
</RelativeLayout>